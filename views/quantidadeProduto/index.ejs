<!DOCTYPE html>
<html>
  <head>
    <title>Quantiade de Cada Produto</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
  </head>
  <body>

    <div class="rotas">
      <div class="home">
        <a href="/">
          <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z"/>
            <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z"/>
          </svg>
        </a>
      </div>
      <div class="form">
        <a href="/newProduto">
          <h1>FORMUL√ÅRIO</h1>
        </a>
      </div>
    </div>
    
    <main>
        <% if (!produto || produto.length == 0) { %>
            <div class="cadastro">
                <h4>SEM REGISTRO ...</h4>
            </div>
        <% } else {
          produto.forEach(function(produto) { %>
            <div class="registro">
                <div class="box-produtos">
                    <div class="registro">
                        <h4>Produto</h4>
                        <center>
                          <h5 class="pt-2"><%= produto[0].NOME_PRODUTO %></h5>
                        </center>
                      </div>
                      <div class="produto">
                        <h4>Quantidade</h4>
                        <center>
                          <h5 class="pt-2"><%= produto[0].QUANTIDADE %></h5>
                        </center>
                    </div>
                </div>
              </div>
        <% })} %>
      </main>

  </body>
</html>
