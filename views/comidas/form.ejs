<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Cadastro de comida</title>
        <link rel="stylesheet" href='/stylesheets/form.css'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <div class="formulario">
            <div class="card" style="width: 30rem;">
                <div class="card-body">
                    <div id="comidas" class="comidas">
                        <h2 class="title">Comida</h2>
                        <form action="<%=acao%>" method="post">
                            <label class="form-label mt-3">Produto</label>
        
                            <select name="produto" class="form-select">
                                <% var a = 0;
                                for (var i = 1; i <= produto.length; i++) { 
                                    var idProduto = produto[a].ID_CADASTRO_PRODUTO %>
                                    <option <% if (comida.ID_CADASTRO_PRODUTO == idProduto) { %> selected <% } %> value="<%=idProduto%>"><%=produto[a].NOME_PRODUTO%></option>
                                <% a++;
                                } %>
                                
                            </select>

                            <label class="form-label mt-3">Tipo Consumo</label>
                            <select name="consumo" class="form-select">
                                <option <% if (comida.ID_TIPO_CONSUMO == 3) { %> selected <% } %> value="3">Entrada</option>
                                <option <% if (comida.ID_TIPO_CONSUMO == 4) { %> selected <% } %> value="4">Sa√≠da</option>
                            </select>
                        
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label mt-3">Quantidade KG/L</label>
                                    <input type="number" class="form-control" name="quantidade" value="<%=comida.QUANTIDADE_CONSUMO %>">
                                </div>
                        
                                <div class="col-md-6">
                                    <label class="form-label mt-3">Motivo Consumo</label>
                                    <input type="text" class="form-control" name="motivo" value="<%=comida.MOTIVO_CONSUMO %>">
                                </div>
                            </div>
                        
                            <label class="form-label mt-3">Data de Validade</label>
                            <input type="date" class="form-control" name="data" value="<%=comida.DATA_CONSUMO %>">
    
                            <div class="mt-3 buttons">
                                <a href="/indexComida" class="btn btn-danger">Cancelar</a>
                                <input type="submit" class="btn btn-primary" value="Salvar">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>